<group ns="map_merge">
  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
    <param name="robot_map_topic" value="map"/>
    <param name="robot_map_updates_topic" value="map_updates"/>
    <param name="robot_namespace" value="uav"/>
    <param name="merged_map_topic" value="/map"/>
    <param name="world_frame" value="map"/>
    <param name="known_init_poses" value="false"/>   
    <param name="merging_rate" value="1.0"/>
    <param name="discovery_rate" value="0.05"/>
    <param name="estimation_rate" value="0.5"/>
    <param name="publish_rate" value="1.0"/>
    <param name="estimation_confidence" value="0.25"/>
  </node>
    <node pkg="tf" type="static_transform_publisher" name="world_to_uav1_tf_broadcaster"  args="0 0 0 0 0 0 /map /uav1/map 100"/>
    <node pkg="tf" type="static_transform_publisher" name="world_to_uav2_tf_broadcaster" args="0 0 0 0 0 0 /map /uav2/map 100"/>
    <node pkg="tf" type="static_transform_publisher" name="world_to_uav3_tf_broadcaster" args="0 0 0 0 0 0 /map /uav3/map 100"/>
    <node pkg="tf" type="static_transform_publisher" name="world_to_uav4_tf_broadcaster"  args="0 0 0 0 0 0 /map /uav4/map 100"/>


</group>
  </launch>